@using OleszekMowinski.ProjectApp.Core
@model IEnumerable<OleszekMowinski.ProjectApp.Interfaces.IAirplane>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<form asp-action="Index" method="get">
    <p>
        Introduction: 
        <input type="date" name="Introduction" />
        <select  name="BeforeIntroduction" >
            <option value="false">After</option>
            <option value="true">Before</option>
        </select> | 
        Weight: 
        <input type="number" name="Weight" />
        <select name="BelowWeight">
            <option value="false">Above</option>
            <option value="true">Below</option>
        </select> | 
        Status: 
        <select name="Status" asp-items="@(Html.GetEnumSelectList<AirplaneStatus>())" >
            <option selected value="">Any</option>
        </select>
        | Manufacturer:
        <select name="ManufacturerId" asp-items="ViewBag.ManufacturerId">
            <option selected value="">Any</option>
        </select>
        <input type="submit" value="Filter" class="btn btn-primary" />
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Introduction)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Weight)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Manufacturer)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Introduction)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Weight)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Manufacturer.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
